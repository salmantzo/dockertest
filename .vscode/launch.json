{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug 2",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "/var/www/html": "${workspaceRoot}"
            },
            "ignore": [
                "**/vendor/symfony/**/*",
                "**/vendor/php-http/**/*",
                "**/vendor/phpmyadmin/**/*"
            ]
        },
        {
            "name": "Listen for Xdebug 3 (Dottie)",
            "type": "php",
            "request": "launch",
            "port": 9001,
            "pathMappings": {
                "/var/www/html": "${workspaceRoot}"
            },
            "ignore": [
                "**/vendor/symfony/**/*",
                "**/vendor/php-http/**/*",
                "**/vendor/phpmyadmin/**/*"
            ]
        },
        {
            "name": "Listen for Xdebug 3",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "/var/www/html": "${workspaceRoot}"
            },
            "ignore": [
                "**/vendor/symfony/**/*",
                "**/vendor/php-http/**/*",
                "**/vendor/phpmyadmin/**/*"
            ]
        }
    ],
}